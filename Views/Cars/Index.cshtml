@model IEnumerable<ParkingRoutes.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineStartConsumption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageConsumption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineStartConsumption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageConsumption)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link">Edit</a>
                        <input type="submit" value="Delete" class="btn btn-link" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
